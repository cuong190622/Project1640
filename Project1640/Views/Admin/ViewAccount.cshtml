@model Project1640.Models.UserInfo


@if (!ViewData.ModelState.IsValid)
{
    @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

</head>

<body>

    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="row mt-2">

            <div class="col-8">
                <form>

                    <h2>Show Account</h2>
                    @Html.HiddenFor(m => m.Role)
                    @Html.HiddenFor(m => m.Name)
                    @Html.HiddenFor(m => m.Age)
                    @Html.HiddenFor(m => m.WorkingPlace)
                    @Html.HiddenFor(m => m.DoB)
                    @Html.HiddenFor(m => m.Department)

                    <div class="form-group" contenteditable='false'>

                        @Html.LabelFor(m => m.Role, htmlAttributes: new { @class = "font-weight-bold" })
                        @Html.EditorFor(m => m.Role, new { htmlAttributes = new { @class = "form-control" } })

                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.DepartmentId, htmlAttributes: new { @class = "form-weight-bold" })
                            @Html.DropDownListFor(m => m.DepartmentId, (IEnumerable<SelectListItem>)ViewBag.Class, htmlAttributes
                           : new { @class = "form-control" }
                           )
                        </div>
                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.Age, htmlAttributes: new { @class = "font-weight-bold" })
                        @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control" } })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.WorkingPlace, htmlAttributes: new { @class = "font-weight-bold" })
                        @Html.EditorFor(m => m.WorkingPlace, new { htmlAttributes = new { @class = "form-control" } })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "font-weight-bold" })
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.DoB, htmlAttributes: new { @class = "font-weight-bold" })
                        @Html.EditorFor(m => m.DoB, new { htmlAttributes = new { @class = "form-control" } })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "font-weight-bold" })
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "font-weight-bold" })
                        @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })

                    </div>

                    <p>
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </form>
            </div>
        </div>

    }

</body>
</html>

<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        height: 100vh;
        font-family: sans-serif;
        padding: 0;
    }

    .header_detail {
        display: flex;
        justify-content: space-between;
        height: 70px;
        background-color: #e6e0bb;
        z-index: 10;
    }

    .header_name {
        display: flex;
        align-items: center;
        margin: 15px 0;
        padding: 0 10px;
    }

    .header_item-first {
        height: 40px;
        margin: 15px 30px;
        display: flex;
    }

        .header_item-first img {
            width: 40px;
            height: 100%;
        }

        .header_item-first span {
            color: rgb(75, 70, 70);
            text-decoration: none;
            font-size: 1.4rem;
            margin: 12px;
            display: flex;
        }

            .header_item-first span a {
                color: rgb(75, 70, 70);
            }

        .header_item-first i,
        .header_item-first span {
            display: flex;
            align-items: center;
        }

        .header_item-first i {
            margin-right: 5px;
        }

    .header_item-second {
        height: 40px;
        margin: 15px 30px;
        display: flex;
    }

        .header_item-second .dropdown {
            display: flex;
            align-items: center;
            margin: 0 10px;
            cursor: pointer;
        }

        .header_item-second .img-avatar {
            height: 35px;
            width: 35px;
            border-radius: 50%;
            margin: 0 10px;
            cursor: pointer;
        }

    .add_container {
        margin: 50px 90px;
    }

    .form_title-input {
        font-size: 1.3rem;
        font-weight: bold;
        border: none;
        outline: none;
        overflow: visible;
        width: 100%;
        border-bottom: 2px solid rgba(0, 0, 0, 0.2);
        margin: 20px 0;
    }

    .btn-add {
        background-color: #e6e0bb;
        font-size: 1.5rem;
        font-weight: bold;
        color: rgb(99, 95, 95);
        width: 100%;
    }
</style>