@model Project1640.Models.Category

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

</head>

<body>

    <div class="idea">
        <div class="header_detail">
            <div class="header_item-first">
                <img src="https://scontent.fhan4-2.fna.fbcdn.net/v/t1.15752-9/273781853_387701592785192_2370446527590513023_n.png?_nc_cat=102&ccb=1-5&_nc_sid=ae9488&_nc_ohc=5t9U-XyL9n0AX8tEXxK&_nc_ht=scontent.fhan4-2.fna&oh=03_AVJkRLxpI0Ki6LzscTR2FROaanmpZfCZTNYFs6-92N4g7Q&oe=62585F2A" alt="">
                <span>
                    <i class="fa-solid fa-caret-left"></i>
                    @Html.ActionLink("Back", "Index")
                </span>
            </div>

            <div class="header_name">
                <h1>Delete Category</h1>
            </div>

            <div class="header_item-second">

                <div class="dropdown">

                </div>
            </div>
        </div>

        <div class="add_container">
            <div class="mt-4">

                <h2 style="font-weight: bold;">Delete Category</h2><br>

                @using (Html.BeginForm(FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">

                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form_title-input" } })

                    </div>

                    <div class="form-group">

                        @Html.TextAreaFor(m => m.Description, new { @class = "form_description-textarea", @cols = "10", @rows = "8" })

                    </div>
                    <br />

                    <span style="color: red; font-style: italic; font-size: 1.2rem;">*Make sure you want to delete this category.</span>
                    <br />
                    <button type="submit" class="btn btn-add">Confirm</button>
                }

            </div>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/9128df8004.js" crossorigin="anonymous"></script>

</body>
</html>

<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        height: 100vh;
        font-family: sans-serif;
        padding: 0;
    }

    .header_detail {
        display: flex;
        justify-content: space-between;
        height: 70px;
        background-color: #e6e0bb;
        z-index: 10;
    }

    .header_name {
        display: flex;
        align-items: center;
        margin: 15px 0;
        padding: 0 10px;
    }

    .header_item-first {
        height: 40px;
        margin: 15px 30px;
        display: flex;
    }

        .header_item-first img {
            width: 40px;
            height: 100%;
        }

        .header_item-first span {
            color: rgb(75, 70, 70);
            text-decoration: none;
            font-size: 1.4rem;
            margin: 12px;
            display: flex;
        }

            .header_item-first span a {
                color: rgb(75, 70, 70);
            }

        .header_item-first i,
        .header_item-first span {
            display: flex;
            align-items: center;
        }

        .header_item-first i {
            margin-right: 5px;
        }

    .header_item-second {
        height: 40px;
        margin: 15px 30px;
        display: flex;
    }

        .header_item-second .dropdown {
            display: flex;
            align-items: center;
            margin: 0 10px;
            cursor: pointer;
        }

        .header_item-second .img-avatar {
            height: 35px;
            width: 35px;
            border-radius: 50%;
            margin: 0 10px;
            cursor: pointer;
        }

    .add_container {
        margin: 50px 90px;
    }

    .form_title-input {
        font-size: 3rem;
        font-weight: bold;
        border: none;
        outline: none;
        overflow: visible;
        width: 100%;
        border-bottom: 2px solid rgba(0, 0, 0, 0.2);
        margin: 20px 0;
    }

    .form_description-textarea {
        width: 100%;
        font-size: 1.2rem;
        border: none;
        outline: none;
    }

    .btn-add {
        background-color: #e6e0bb;
        font-size: 1.5rem;
        font-weight: bold;
        color: rgb(99, 95, 95);
        width: 100%;
    }
</style>











