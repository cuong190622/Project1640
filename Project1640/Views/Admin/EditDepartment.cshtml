@model Project1640.Models.Department
@{
    ViewBag.Title = "CreateDepartment";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>

<body>

    <div class="idea">
        <div class="header_detail">
            <div class="header_item-first">
                <img src="https://scontent.fhan4-2.fna.fbcdn.net/v/t1.15752-9/273781853_387701592785192_2370446527590513023_n.png?_nc_cat=102&ccb=1-5&_nc_sid=ae9488&_nc_ohc=5t9U-XyL9n0AX8tEXxK&_nc_ht=scontent.fhan4-2.fna&oh=03_AVJkRLxpI0Ki6LzscTR2FROaanmpZfCZTNYFs6-92N4g7Q&oe=62585F2A" alt="">
                <span>
                    <i class="fa-solid fa-caret-left"></i>
                    @Html.ActionLink("Back", "IndexDepartment")
                </span>
            </div>

            <div class="header_name">
                <span>Edit Department</span>
            </div>

            <div class="header_item-second">

                <div class="dropdown">

                </div>
            </div>
        </div>

        <div class="add_container">
            <div class="mt-4">

                <h2 style="font-weight: bold;">Edit Department</h2><br>

                @using (Html.BeginForm(FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">

                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form_title-input" } })

                    </div>

                    <div class="form-group">

                        @Html.TextAreaFor(m => m.Description, new { @class = "form_description-textarea", @cols = "10", @rows = "8" })

                    </div>
                    <br />

                    <button type="submit" class="btn btn-add">Update</button>
                }

            </div>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/9128df8004.js" crossorigin="anonymous"></script>

</body>
</html>

