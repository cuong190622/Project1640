@model Project1640.Models.SetDate

@{
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SetDate</title>
</head>
<body>
    @using (Html.BeginForm("CreateDate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Set Date</h4>
            <hr />

            <div class="form-group">
                <h2>Start Date</h2>
                <div>
                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form_title-input" } })
                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h2>End Date</h2>
                <div>
                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form_title-input" } })
                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="submit" class="btn btn-add">Submit</button>
        </div>
    }

</body>
</html>
