@model IEnumerable<Project1640.Models.Category>
@{
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>

<body>

    <div class="admin">

        <container>
            <h1>List category</h1>

            <table class="table table-hover" style="margin: 10px 0 0;">

                <thead class="thead-dark">
                    <tr>
                       
                        <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr class="thead-body">
                     
                            <td>@Html.DisplayFor(model => c.Name)</td>
                            <td>@Html.DisplayFor(model => c.Description)</td>

                            <td>
                                <a type="button" class="btn btn-success btn-sm" style="margin-top: 3px; width: 55px;"
                                   href="@Url.Action("EditCategory", new {id = c.Id})">Edit</a>
                                <a type="button" class="btn btn-danger btn-sm" style="margin-top: 3px; width: 55px;"
                                   href="@Url.Action("DeleteCategory", new {id = c.Id })">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </container>

    </div>
</body>
</html>


