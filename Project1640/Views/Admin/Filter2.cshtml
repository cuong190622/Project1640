@using (Html.BeginForm("ViewAllIdea", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", _lpchecked = "1" }))
{
    <p>Show top @TempData["Number"].ToString() Ideas</p>
    <input type="text" class="form_title-input" id="count" name="count" placeholder="Number Ideas" value="@TempData["Number"].ToString()">
    <button class="btn btn-add" type="submit">Confirm</button>
}

