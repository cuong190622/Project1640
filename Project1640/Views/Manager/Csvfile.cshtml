
@{
    ViewBag.Title = "Csvfile";
}

@model IEnumerable<Project1640.Models.Idea>
<div class="panel-body">
    <div class="form-group">
        <div class="row">
            <div class="panel-primary">
                @using (Html.BeginForm("Export", "Manager", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success">
                        <i class="glyphicon glyphicon glyphicon-download"></i> Download CSV
                    </button>
                }
            </div>
        </div>
        <br />
        <div class="row">
            <table class="table table-bordered table-responsive">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>content</th>
                    
                </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Content
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

