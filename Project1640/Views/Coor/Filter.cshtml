@using (Html.BeginForm("Index", "Coor", FormMethod.Post, new { @class = "form-horizontal", role = "form", _lpchecked = "1" }))
{
    <p>Show top Ideas</p>
    <input class="form_title-input" style="border-radius: 20px; border: none; padding: 5px;" type="text" id="count" name="count" placeholder="Number Ideas" value="@TempData["Number"].ToString()">
    <input style="display: none;" type="text" id="categoryId" name="categoryId" value="@TempData["CategoryId"].ToString()">
    <button class="btn btn-add" style="border-radius: 20px; border: none;" type="submit">Confirm</button>
}