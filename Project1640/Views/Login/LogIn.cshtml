@{
    ViewBag.Title = "LogIn";
}

@model Project1640.Models.UserInfo

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>
<style>
    body {
        background: #28a745 !important;
        font-family: 'Muli', sans-serif;
    }

    h1 {
        color: #fff;
        padding-bottom: 2rem;
        font-weight: bold;
    }

    a {
        color: #333;
    }

        a:hover {
            color: #E8D426;
            text-decoration: none;
        }

    .form-control:focus {
        color: #000;
        background-color: #fff;
        border: 2px solid #E8D426;
        outline: 0;
        box-shadow: none;
    }

    .btn {
        background: #28a745;
        border: #E8D426;
    }

        .btn:hover {
            background: #28a745;
            border: #E8D426;
        }
</style>
<body>
    <div class="pt-5">
        <h1 class="text-center"> FPT CMS SYSTEM </h1>
        <div class="container">
            <div class="row">
                <div class="col-md-5 mx-auto">
                    <div class="message">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" });
                        }
                    </div>
                    <div class="card card-body">
                        @using (Html.BeginForm("LogIn", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form", _lpchecked = "1" }))
                        {
                            <div class="form-group required">
                                @Html.LabelFor(m => m.Email,
                                   htmlAttributes: new { @class = "font-weight-bold" })
                                @Html.EditorFor(m => m.Email,
                                  new
                                  {
                                      htmlAttributes = new { @class = "form-control text-lowercase" }
                                  })
                            </div>
                            <div class="form-group required">
                                <label>Password</label> <br />
                                @Html.PasswordFor(m => m.PasswordHash,
                                  new
                                  {
                                      htmlAttributes = new { @class = "form-control text-lowercase" }
                                  })
                            </div>
                            <div class="form-group pt-1">
                                <button class="btn btn-primary btn-block" type="submit"> Log In </button>
                            </div>
                        }



                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

