    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/blog.css">
</head>
<body>
    <div>
        <div class="admin">

            <header class="admin_header">
                <h2>Admin Page</h2>
                <ul>
                    <a href="">
                    <li>
                        <i class="fa-solid fa-house-user"></i>
                        Home
                    </li>
                    </a>
                    <a href="" class="add_btn">
                    <li>
                        <i class="fa-solid fa-user-plus"></i>
                        Add member
                    </li>
                    </a>
                    <a href="">
                    <li>
                        <i class="fa-solid fa-clover"></i>
                        bla bla bla
                    </li>
                    </a>
                    <a href="">
                    <li>
                        <i class="fa-solid fa-clover"></i>
                        bla bla bla
                    </li>
                    </a>
                    <a href="">
                    <li>
                        <i class="fa-solid fa-right-from-bracket"></i>
                        Log out
                    </li>
                    </a>
                </ul>
            </header>

        </div>

        <div class="overlay">
            <div class="add">
                <div class="comment_close">
                    <i class="fa-solid fa-x"></i>
                </div>

                <div class="comment_amount">
                    <span>Add Someone</span>
                </div>

                <div class="mt-4">
                    <form method="POST" action="">

                        <div class="form-group">
                            <label for="name" class="">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="name">
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="description" class="">Description</label>
                            <input type="text" class="form-control" id="description" name="description" placeholder="description">
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="videoId" class="">Video ID</label>
                            <input type="text" class="form-control" id="videoId" name="videoId" placeholder="videoId">
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Add</button>

                    </form>

                </div>
            </div>
        </div>

        <script>

			var overlay = document.querySelector('.overlay');
			var close = document.querySelector('.comment_close i')
			var addBtn = document.querySelector('.add_btn')

			console.log(close)

			close.addEventListener('click', (e) => {
				overlay.classList.remove('show')
			})

			// Giai thich
			overlay.addEventListener('click', (e) => {
				if(e.target == e.currentTarget){
					overlay.classList.remove('show')
				}
			})

			addBtn.addEventListener('click', (e) => {
				e.preventDefault()
				overlay.classList.add('show')
			})

			function w3_open() {
				document.getElementById("main").style.marginLeft = "25%";
				document.getElementById("mySidebar").style.width = "25%";
				document.getElementById("mySidebar").style.display = "block";
				document.getElementById("openNav").style.display = 'none';
			}
			function w3_close() {
				document.getElementById("main").style.marginLeft = "0%";
				document.getElementById("mySidebar").style.display = "none";
				document.getElementById("openNav").style.display = "inline-block";
			}

        </script>

        <script src="https://kit.fontawesome.com/9128df8004.js" crossorigin="anonymous"></script>
    </div>
</body>
</html>
