@model Project1640.Models.Idea

@{
    Layout = "~/Views/Staff/_LayoutStaff.cshtml";
    TempData["UserEmail"] = TempData["UserEmail"];
    TempData["UserId"] = TempData["UserId"];
    TempData["IdeaId"] = TempData["IdeaId"];
    string Anonymously = "Anonymously";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewIdea</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>

<body>
    <div>
        <h4> @Html.DisplayFor(model => model.Title)</h4>
        @Html.DisplayFor(model => model.Views) Views
        @{Html.RenderAction("ShowCategory", "Staff", new { CategoryId = Model.CategoryId });}

    <div class="blog_detail">

        <div class="header_detail">
            <div class="header_item-first">
                <img src="https://scontent.fhan4-2.fna.fbcdn.net/v/t1.15752-9/273781853_387701592785192_2370446527590513023_n.png?_nc_cat=102&ccb=1-5&_nc_sid=ae9488&_nc_ohc=5t9U-XyL9n0AX8tEXxK&_nc_ht=scontent.fhan4-2.fna&oh=03_AVJkRLxpI0Ki6LzscTR2FROaanmpZfCZTNYFs6-92N4g7Q&oe=62585F2A" alt="">
                <span>
                    <i class="fa-solid fa-caret-left"></i>
                    @Html.ActionLink("Back", "Index")
                </span>
            </div>

            File Upload: @{Html.RenderAction("ShowFile", "Staff", new { IdeaId = Model.Id });}

            <dt>
                @Html.DisplayNameFor(model => model.Date) : @Html.DisplayFor(model => model.Date) <br />
                By User: @{
                    if (Model.Status == true)
                    {
                        { Html.RenderAction("ShowUser", "Staff", new { UserId = Model.UserId }); }
                    }
                    else
                    {
                        @Html.DisplayName(Anonymously)
                    }
                }
            </dt>
        </dl>
    </div>

                    <div class="blog_react-item">
                        <div class="react_btn">
                            @{Html.RenderAction("Like", "Staff");}
                        </div>

    @{Html.RenderAction("ShowComment", "Staff");}
    @{Html.RenderAction("CreateComment", "Staff", new { IdeaId = Model.Id });}
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>

<style>

    .header_detail {
        display: flex;
        justify-content: space-between;
        height: 70px;
        background-color: #e6e0bb;
        z-index: 10;
    }

    .header_item-first {
        height: 40px;
        margin: 15px 30px;
        display: flex;
    }

        .header_item-first img {
            width: 40px;
            height: 100%;
        }

        .header_item-first span {
            color: rgb(75, 70, 70);
            text-decoration: none;
            font-size: 1.4rem;
            margin: 12px;
            display: flex;
        }

        .header_item-first i,
        .header_item-first span {
            display: flex;
            align-items: center;
        }

        .header_item-first i {
            margin-right: 5px;
        }

    .header_item-second {
        height: 40px;
        margin: 15px 30px;
        display: flex;
    }

        .header_item-second .dropdown {
            display: flex;
            align-items: center;
            margin: 0 10px;
            cursor: pointer;
        }

        .header_item-second .img-avatar {
            height: 35px;
            width: 35px;
            border-radius: 50%;
            margin: 0 10px;
            cursor: pointer;
        }

    .container_body {
        margin: 50px 90px 60px;
    }

    .container_blog {
        width: 100%;
        display: flex;
        justify-content: space-between;
    }

    .blog_react {
        width: 20%;
        margin-right: 50px;
    }

    .blog_post {
        width: 60%;
        margin-right: 10px;
    }

    .empty {
        width: 20%;
    }

    .blog_react-name {
        border-bottom: 2px solid rgb(173, 167, 167);
        padding-bottom: 5px;
    }

    .blog_react-item {
        margin-top: 37px;
        font-size: 1.5rem;
        display: flex;
        justify-content: space-between;
    }

    .react_like i,
    .react_dislike i,
    .react_commment i {
        cursor: pointer;
    }

    .react_like.like i {
        color: #0084ff;
    }

    .react_dislike.dislike i {
        color: red;
    }

    .react_btn {
        width: 70%;
    }

        .react_btn form {
            display: flex;
            width: 100%;
            justify-content: space-between;
        }

    .react_like,
    .react_dislike {
        display: flex;
        align-items: center;
        border: 2px solid #fe7a20;
        padding-left: 5px;
        margin: 0 10px;
        border-radius: 10px;
    }

        .react_like:hover,
        .react_dislike:hover,
        .react_like input:hover,
        .react_dislike input:hover {
            background-color: #fe7a20;
            color: white;
        }

        .react_like input,
        .react_dislike input {
            height: 25px;
            padding: 0;
            font-size: 1rem;
            padding: 0 5px;
            background-color: white;
            border: none;
            border-radius: 10px;
        }

    .blog_post h1 {
        margin-bottom: 45px;
    }

    .blog_post-content {
        margin: 30px 0;
    }

        .blog_post-content img {
            margin: 0 0 30px;
            height: 500px;
            width: 100%;
            image-rendering: pixelated;
            object-fit: cover;
        }

        .blog_post-content p {
            text-align: justify;
            text-indent: 50px;
        }

    .blog_item-header .img-avatar {
        height: 35px;
        width: 35px;
        font-size: 2rem;
        border-radius: 50%;
        margin: 0 10px;
        cursor: pointer;
    }

    .blog_item-header .img-avatar {
        height: 35px;
        width: 35px;
        font-size: 1.5rem;
        border-radius: 50%;
        margin: 0 10px;
        cursor: pointer;
    }

    .blog_item-header {
        display: flex;
        justify-content: space-between;
    }

    .blog_time {
        color: rgba(0, 0, 0, 0.5);
        margin-top: 5px;
        margin-left: 10px;
    }

    .post_btn {
        display: flex;
        align-items: center;
        margin-top: 15px;
    }

        .post_btn a {
            margin-right: 25px;
            background-color: #fe7a20;
            border: none;
            padding: 5px 15px;
            border-radius: 15px;
            color: #fff;
            cursor: pointer;
            font-weight: bold;
            text-decoration: none;
        }

    /* LAYOUT COMMENT */

    .overlay,
    .comment_layout {
        position: fixed;
        background-color: rgba(0, 0, 0, 0.6);
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: none;
        z-index: 10;
    }

    .show {
        display: block;
    }

    .add,
    .comment_content {
        background-color: white;
        top: 0;
        bottom: 0;
        width: 650px;
        height: 100%;
        right: 0;
        padding: 20px;
        animation: slide ease 0.8s;
        position: relative;
        max-height: 100%;
        overflow: scroll
    }

    .comment_close {
        width: 100%;
        height: 30px;
    }

        .comment_close i {
            font-size: 1.5rem;
            font-weight: bold;
            cursor: pointer;
            float: right;
        }

    .comment_amount span {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .comment_write {
        margin-top: 30px;
        display: flex;
    }

    .comment_write-input {
        width: 100%;
        margin: 0 15px;
        border: none;
        outline: none;
        border-bottom: 2px solid rgba(0, 0, 0, 0.2);
    }

    .comment_list {
        margin: 20px 0 20px;
        position: relative;
    }

    .comment_item {
        display: flex;
        margin: 20px 0;
        position: relative;
    }

        .comment_write .blog_avatar,
        .comment_item .blog_avatar {
            width: 6%;
        }

    .comment_item-content {
        margin-left: 10px;
        width: 92%;
    }

        .comment_item-content span {
            margin: 5px 0;
            font-weight: bold;
        }

        .comment_item-content p {
            margin-bottom: 0;
            width: 100%;
        }

    .form_input-comment {
        width: 90%;
    }

    .hide {
        display: none;
    }

    .blog_time-comment {
        font-size: 0.8rem;
        color: rgba(0, 0, 0, 0.3);
        margin-top: 5px;
    }

    .checkbox {
        margin: 14px;
    }

    .btn_add-comment {
        border: 2px solid #fe7a20;
        background-color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: bold;
        color: #6d6953;
        transition: 0.7s;
        text-decoration: none;
        float: right;
    }

        .btn_add-comment:hover {
            background-color: #fe7a20;
            transition: 0.5s;
            color: white;
        }
</style>