            </div>

            <div class="header_search">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search blog...">
            </div>

            <div class="header_item-second">
                <div class="dropdown">
                    <p class="post_btn">@Html.ActionLink("Post Idea", "CreateIdea")</p>

                    <span type="i" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false" style="font-weight: bold;">
                        My Blog
                    </span>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li>
                            <a class="dropdown-item" href="#">
                                <img src="/image/logo.png" alt="" class="img-blog">
                                <span>Đề nghị đình công để đòi tăng lương</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <img src="/image/logo.png" alt="" class="img-blog">
                                <span>Đề nghị đình công để đòi tăng lương</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="dropdown">
                    <i class="fa-solid fa-user" alt="" type="i" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"></i>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="#">My Account</a></li>
                        <li><a class="dropdown-item" href="#">Log Out</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container_body">
            @RenderBody()
        </div>

        <div class="container" style="margin: 0; max-width: 100%; padding: 0 110px 0 200px; background-color: #e6e0bb; bottom: 0;">
            <footer class="row row-cols-5 py-5 border-top">
                <div class="col">
                    <a href="/" class="d-flex align-items-center mb-3 link-dark text-decoration-none">
                        <img src="https://scontent.fhan4-2.fna.fbcdn.net/v/t1.15752-9/273781853_387701592785192_2370446527590513023_n.png?_nc_cat=102&ccb=1-5&_nc_sid=ae9488&_nc_ohc=5t9U-XyL9n0AX8tEXxK&_nc_ht=scontent.fhan4-2.fna&oh=03_AVJkRLxpI0Ki6LzscTR2FROaanmpZfCZTNYFs6-92N4g7Q&oe=62585F2A" alt="">
                    </a>
                    <p class="text-muted">&copy; 2022</p>
                </div>

                <div class="col">
                    <h5>CHAT LTD</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted"><b>C</b>uong Nguyen Dinh</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted"><b>H</b>uy Tran Quang</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted"><b>A</b>nh Le Hoang</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted"><b>T</b>hien Le Minh</a></li>
                    </ul>
                </div>

                <div class="col">
                    <h5>Group 7</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Facebook</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Instargram</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Email</a></li>
                    </ul>
                </div>

                <div class="col">
                    <h5>University of Greenwich</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Email</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Facebook</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Instargram</a></li>
                    </ul>
                </div>
            </footer>
        </div>

    </div>



    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
