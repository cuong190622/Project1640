    <script src="https://kit.fontawesome.com/9128df8004.js" crossorigin="anonymous"></script>


    @RenderSection("scripts", required: false)

</body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        height: 100vh;
        font-family: sans-serif;
        padding: 0;
    }

    /* BLOG */
    /* HEADER */

    .header {
        display: flex;
        justify-content: space-between;
        height: 70px;
        background-color: #e6e0bb;
        position: sticky;
        right: 0;
        top: 0;
        z-index: 10;
    }

    .header_detail {
        display: flex;
        justify-content: space-between;
        height: 70px;
        background-color: #e6e0bb;
        z-index: 10;
    }

    .header_item-first {
        height: 40px;
        margin: 15px 30px;
        display: flex;
    }

        .header_item-first img {
            width: 40px;
            height: 100%;
        }

        .header_item-first span {
            color: rgb(75, 70, 70);
            text-decoration: none;
            font-size: 1.4rem;
            margin: 12px;
            display: flex;
        }

        .header_item-first i,
        .header_item-first span {
            display: flex;
            align-items: center;
        }

        .header_item-first i {
            margin-right: 5px;
        }

    .header_item-second {
        height: 40px;
        margin: 15px 30px;
        display: flex;
    }

        .header_item-second .dropdown {
            display: flex;
            align-items: center;
            margin: 0 10px;
            cursor: pointer;
        }

        .header_item-second .img-avatar {
            height: 35px;
            width: 35px;
            border-radius: 50%;
            margin: 0 10px;
            cursor: pointer;
        }

        .header_item-second .dropdown:first-child .dropdown-menu {
            width: 400px;
        }

    .dropdown-item .img-blog {
        height: 35px;
        width: 35px;
        cursor: pointer;
    }

    .header_search {
        margin: 15px 0;
        display: flex;
        width: 300px;
        padding: 0 10px;
        border: 2px solid rgb(165, 162, 162);
        border-radius: 15px;
    }

    .header_name {
        display: flex;
        align-items: center;
        margin: 15px 0;
        padding: 0 10px;
    }

    .header_search i,
    .header_search input {
        display: flex;
        align-items: center;
    }

    .header_search i {
        margin-right: 10px;
        font-size: 1.2rem;
        color: rgba(0, 0, 0, 0.6);
    }

    .header_search input {
        width: 85%;
        border: none;
        outline: none;
        background-color: #e6e0bb;
    }

    .post_btn {
        display: flex;
        align-items: center;
        margin-top: 15px;
    }

        .post_btn a {
            margin-right: 25px;
            background-color: #fe7a20;
            border: none;
            padding: 5px 15px;
            border-radius: 15px;
            color: #fff;
            cursor: pointer;
            font-weight: bold;
            text-decoration: none;
        }

    /* Blog Container */

    .container_body {
        margin: 50px 90px 60px;
    }

    .container_header {
        margin-bottom: 50px;
    }

    .container_blog {
        width: 100%;
        display: flex;
        justify-content: space-between;
    }

    .filter {
        display: flex;
        justify-content: space-between;
    }

    .filter_item {
        margin: 0 20px;
    }

        .filter_item a {
            border: 2px solid #fe7a20;
            background-color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
            color: #6d6953;
            transition: 0.7s;
            text-decoration: none;
        }

            .filter_item a:hover {
                background-color: #fe7a20;
                cursor: pointer;
                color: white;
                transition: 0.7s;
            }

    .blog_all-item {
        width: 70%;
    }

    .blog_item {
        border: 2px solid rgba(0, 0, 0, 0.2);
        padding: 20px;
        border-radius: 15px;
        margin: 30px 0;
    }

    .blog_item-header {
        display: flex;
        justify-content: space-between;
    }

    .blog_item-option {
        display: flex;
        align-items: center;
        font-weight: bold;
        cursor: pointer;
    }

    .blog_option li {
        padding: 5px 10px 2px;
        cursor: pointer;
    }

    .blog_avatar {
        display: flex;
    }

        .blog_avatar i {
            height: 25px;
            width: 25px;
            border-radius: 50px;
            font-size: 1.3rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .blog_avatar span {
            display: flex;
            align-items: center;
            margin-left: 10px;
            font-size: 1.4rem;
            font-weight: bold;
        }

    .blog_content a {
        text-decoration: none;
        color: black;
    }

        .blog_content a h1 {
            margin: 15px 0 10px;
        }

    .blog_content span {
        overflow: hidden;
        display: block;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
    }

    .blog_time {
        color: rgba(0, 0, 0, 0.5);
        margin-top: 10px;
    }

    .blog_time-comment {
        font-size: 0.8rem;
        color: rgba(0, 0, 0, 0.3);
        margin-top: 5px;
    }

    .blog_all-categories {
        width: 24%;
        border-left: 1px solid rgba(0, 0, 0, 0.2);
        padding: 23px;
    }

    .blog_categories {
        margin: 15px 0;
    }

        .blog_categories li {
            list-style: none;
            margin: 25px 0;
            width: 150px;
        }

        .blog_categories a {
            text-decoration: none;
            font-weight: bold;
            font-size: 1rem;
            background-color: rgba(0, 0, 0, 0.1);
            color: black;
            padding: 7px 40px;
            border-radius: 15px;
        }

    .pagination {
        display: flex;
        justify-content: center;
    }

        .pagination li {
            list-style: none;
            background-color: #e6e0bb;
            margin: 0 5px;
            padding: 5px 10px;
            font-weight: bold;
            border-radius: 10px;
            color: white;
        }

            .pagination li a {
                text-decoration: none;
            }

    /* animation */
    .left-to-right {
        transform: translateX(-150%);
        transition: 1.5s;
    }

        .left-to-right.start {
            transform: translateX(0)
        }
</style>

